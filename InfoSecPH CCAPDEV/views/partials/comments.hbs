                <p>{{uid.username}}</p>
            </a>
        <div class="text">
            <p class="textarea-comment">{{text}}</p>
        </div>
            <div class="friend-btn log2">
                <a href="/post/{{../../pid}}"><span >Go To Post</span></a>
            </div>
        </div>
        {{/if}}
        {{/each}}
        {{/each}}
    {{/each}}
</div>