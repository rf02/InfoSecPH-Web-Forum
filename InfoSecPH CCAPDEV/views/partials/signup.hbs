    <div class="col-md-12 d-flex justify-content-start align-items-start">
        <form action="/log/signup" method="POST">
            <div class="main-log">
                <div class="log-inputText">
                    <label for="username" class="log-prompt">Enter Username:</label>
                    <input type="text" id="username" name="username" required="required">
                    <span>Username</span>
                </div>
                <div class="log-inputText">
