<div class="createPost d-flex justify-content-center align-items-center">
    <div class="post-container text-white text-center">
        <div class="create-header"><h2>Create a Post</h2></div>
        <div class="create-form">
            <form id="postForm" action="/post/create" method="POST">
                <div class="row justify-content-center">
                    <div class="main-form col-md-6">
                        <div class="main-form2 p-4 rounded">
                            <div class="create-title form-group">
                                <label for="post-title">Title:</label>
                                <input type="text" class="title-form form-control" id="post-title" name="title" required="required" placeholder="Enter title...">
                            </div>
                            <div class="create-text form-group">
                                <label for="post-text">Text:</label>
                                <textarea class="text-form form-control" id="post-text" name="text" rows="5" placeholder="Enter text..."></textarea>
                            </div>
                            <div class="create-image form-group">
                                <label for="post-image">Image Link:</label>
                                <input type="text" class="image-form form-control" id="post-image" name="image" placeholder="Image goes here...">
                            </div>
                            <div class="select-community form-group">
                                <label>Select Community:</label><br>
                                <div class="communities">
                                    {{#each communities}}
                                        <label class="community-checkbox d-flex align-items-center mb-2">
                                            <input type="checkbox" id="{{_id}}" name="community" value="{{_id}}">
                                            <div class="community-info ml-2 mr-2"><span>{{community_name}}</span></div>
                                            <img class="community-image" src="{{image}}" alt="{{community_name}}" style="max-width: 30px; max-height: 30px;">
                                        </label>
                                    {{/each}}
                                </div>
                            </div>
                            <div id="errorMessage">! Please select at least one community !</div>
                        </div>
                    </div>
                </div>
                <button id="postBtn" class="btn btn-primary mt-3">Submit</button>
            </form>
        </div>
    </div>
</div>